

@{
    ViewBag.Title = " پنل مدیریت-ثبت بیمار ";
    Layout = "~/Views/Shared/_doctorlayout.cshtml";
}
@section ViewScript
{
    <script>
        $(Load);
        function Load()
        {
            CreateCode();
        }
        function CreateCode()
        {
            var code = document.getElementById("CustomerCode");
            code.value = Math.random() * 10;
        }
        function Register()
        {
            var data = "CustomerID=" + CustomerID.value + "&CustomerFullName=" + CustomerFullName.value + "&CustomerTel=" + CustomerTel.value + "&CustomerMobile=" + CustomerMobile.value + "&CustomerAddress=" + CustomerAddress.value + "&CustomerCode=" + CustomerCode.value + "&DoctorID=" + DoctorID.value + "&NationalCode=" + NationalCode.value;
            var _httpreq = new XMLHttpRequest();
            _httpreq.onreadystatechange = function ()
            {
                if (_httpreq.responseText == "ok")
                {
                    alert("عملیات با موفقیت انجام شد");
                    form1.reset();
                }
            }
            _httpreq.open("Get", "RegisterCustomer?" + data, true);
            _httpreq.send();
        }
    </script>
}
<div class="MainDiv">
    <div class="container">
        <form class="form-horizontal" id="form1">
            <input type="hidden" class="form-control" id="DoctorID" name="DoctorID" value="@Session["DoctorID"].ToString()">
            <input type="hidden" class="form-control" id="CustomerID" name="CustomerID" value="0">
            <div class="form-group">
                <label class="control-label col-sm-2" for="CustomerFullName">نام و نام خانوادگی:</label>
                <div class="col-xs-3">
                    <input required type="text" class="form-control" id="CustomerFullName" name="CustomerFullName" placeholder="نام را وارد کنید">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="CustomerTel">تلفن:</label>
                <div class="col-xs-3">
                    <input required type="text" class="form-control" id="CustomerTel" name="CustomerTel" placeholder="تلفن را وارد کنید">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="CustomerMobile">موبایل:</label>
                <div class="col-xs-3">
                    <input required type="text" class="form-control" id="CustomerMobile" name="CustomerMobile" placeholder="موبایل را وارد کنید">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="CustomerAddress">ادرس:</label>
                <div class="col-xs-10">
                    <input required type="text" class="form-control" id="CustomerAddress" name="CustomerAddress" placeholder="ادرس را وارد کنید">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="CustomerCode">کد بیمار:</label>
                <div class="col-xs-3">
                    <input style="color:black;" readonly type="text" class="form-control" id="CustomerCode" name="CustomerCode">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="NationalCode">کدملی:</label>
                <div class="col-xs-3">
                    <input required type="text" class="form-control" id="NationalCode" name="NationalCode" placeholder="کدملی را وارد کنید">
                </div>
            </div>
            <div class="form-group">
                <button onclick="Register()" type="button" class="btn btn-primary col-sm-2">ثبت</button>
            </div>
        </form>
    </div>
</div>